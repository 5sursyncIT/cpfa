{
  "name": "cpfa/wordpress-plugins",
  "description": "CPFA Training Center and Library Management System",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.0",
    "endroid/qr-code": "^5.0",
    "mpdf/mpdf": "^8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Cpfa\\Core\\": "cpfa-core-manager/includes/",
      "Cpfa\\Forms\\": "cpfa-forms-registrations/includes/",
      "Cpfa\\Pdf\\": "cpfa-pdf-generator/includes/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=WordPress",
    "phpcbf": "phpcbf --standard=WordPress",
    "test": "phpunit"
  }
}
